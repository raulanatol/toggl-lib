{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": ".dts",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
